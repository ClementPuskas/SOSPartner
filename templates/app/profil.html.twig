{% extends 'app.html.twig' %}

{% block body %}

    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Profil de {{ app.user.prenom }}</h1>
        <h5>Mettre à jour mes informations personnelles</h5>
    </div>

    <div class="container">

        {{ form_start(form, {'attr': {'class': 'form-signin'}}) }}
        {% for errorMessage in app.flashes('error') %}
            <div class="alert alert-danger d-flex align-items-center justify-content-between" role="alert">
                <div class="flex-fill mr-3">
                    <p class="mb-0">{{ errorMessage }}</p>
                </div>
            </div>
        {% endfor %}
        {% for succesMessage in app.flashes('success') %}
            <div class="alert alert-success d-flex align-items-center justify-content-between" role="alert">
                <div class="flex-fill mr-3">
                    <p class="mb-0">{{ succesMessage }}</p>
                </div>
            </div>
        {% endfor %}
            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'value' : app.user.email }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.password) }}
                {{ form_widget(form.password) }}
            </div>
        <button class="btn btn-success mt-3" type="submit">Mettre à jour</button>
        {{ form_end(form)}}



    </div>
{% endblock %}
