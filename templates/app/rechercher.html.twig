{% extends 'app.html.twig' %}

{% block body %}


    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Vous cherchez une personne avec qui jouer ?</h1>
        <p class="lead">A l'aide de ce formulaire vous trouverez votre Ã¢me soeur</p>
    </div>

    <div class="container">
        {{ form_start(form) }}
            <div class="form-group row">
                    {{ form_label(form.nom,null, {'label_attr' : {'class' : 'col-sm-2 col-form-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.nom, {'attr' : {'class' : 'form-control'}}) }}
                </div>
            </div>
        <div class="form-group row">
            {{ form_label(form.prenom,null, {'label_attr' : {'class' : 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.prenom, {'attr' : {'class' : 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group row">
            <label for="inputState" class="col-sm-2 col-form-label">Jeux :</label>
            <div class="col-sm-10">
                {{ form_widget(form.games, {'attr' : {'class' : 'form-control'}}) }}
            </div>
        </div>
            <div class="form-group row">
                <div class="col-sm-12 mt-3">
                    <button type="submit" class="btn btn-primary">Lancer la recherche</button>
                </div>
            </div>
        {{ form_end(form) }}

    </div>
{% endblock %}
